<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_dialog_pass"
    android:layout_height="match_parent">
        <com.amnix.materiallockview.MaterialLockView
            xmlns:lockview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lp_pass_set"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            lockview:LOCK_COLOR="#fff"
            android:layout_alignParentBottom="true"
            lockview:WRONG_COLOR="#ff0000"
            lockview:CORRECT_COLOR="#00ff00"/>
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                        android:orientation="vertical"
                    >
                        <Button
                            android:id="@+id/txt_cancell"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/Cancel"
                            android:textColor="#5b0606"
                            android:background="@drawable/edittext_round"
                            android:layout_margin="5dp"
                            android:textSize="22sp" />
                        <Button
                            android:id="@+id/txt_retry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/Retry"
                            android:visibility="gone"
                            android:textColor="#5b0606"
                            android:background="@drawable/edittext_round"
                            android:layout_margin="5dp"
                            android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    >
                <Button
                    android:id="@+id/txt_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="continue"
                     android:textColor="#5b0606"
                    android:background="@drawable/edittext_round"

                    android:layout_margin="5dp"

                    android:textSize="22sp" />
                        <Button
                            android:id="@+id/txt_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="confirm"
                            android:textColor="#5b0606"
                            android:background="@drawable/edittext_round"
                            android:visibility="gone"
                            android:layout_margin="5dp"

                            android:textSize="22sp" />
                        </LinearLayout>
        </LinearLayout>

</LinearLayout>